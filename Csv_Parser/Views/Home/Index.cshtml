@model IEnumerable<Employee>
@{
    ViewBag.Title = "List fo Authors";
}

<div class="row">
    <div class="col-md-8 off-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.PayrollNumber)</th>
                    <th>@Html.DisplayNameFor(model=>model.Forenames)</th>
                    <th>@Html.DisplayNameFor(model=>model.Surname)</th>
                    <th>@Html.DisplayNameFor(model=>model.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(model=>model.Telephone)</th>
                    <th>@Html.DisplayNameFor(model=>model.Mobile)</th>
                    <th>@Html.DisplayNameFor(model=>model.Address)</th>
                    <th>@Html.DisplayNameFor(model=>model.Address2)</th>
                    <th>@Html.DisplayNameFor(model=>model.Postcode)</th>
                    <th>@Html.DisplayNameFor(model=>model.EmailHome)</th>
                    <th>@Html.DisplayNameFor(model=>model.StartDate)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle">
                            @Html.DisplayFor(model => item.PayrollNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Forenames)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Surname)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(model => item.DateOfBirth)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Telephone)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Mobile)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Address)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Address2)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Postcode)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.EmailHome)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.StartDate)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Home" 
                            asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
